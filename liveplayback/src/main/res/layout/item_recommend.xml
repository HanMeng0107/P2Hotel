<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_256"
    android:layout_height="@dimen/h_356"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_thumb"
        android:layout_width="@dimen/w_200"
        android:layout_height="@dimen/h_300"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h_27"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/im_name_bg"
        android:layout_width="@dimen/w_200"
        android:layout_height="@dimen/h_100"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/h_28"
        android:background="@mipmap/bg_movie_name" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="@dimen/w_200"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/h_38"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="8"
        android:maxLines="1"
        android:text="一条狗的使命"
        android:textColor="#e6e6e6"
        android:textSize="@dimen/h_26" />

    <ImageView
        android:id="@+id/im_movie_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_movie_focus"
        android:visibility="gone" />

</FrameLayout>