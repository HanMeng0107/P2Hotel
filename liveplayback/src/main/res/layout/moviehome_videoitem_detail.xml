<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_movie_info">

    <FrameLayout
        android:layout_width="@dimen/w_820"
        android:layout_height="@dimen/h_500"
        android:layout_marginLeft="@dimen/w_90"
        android:layout_marginTop="@dimen/h_108">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_462"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_72"
            android:src="@mipmap/bg_recommend" />

        <TextView
            android:layout_width="@dimen/w_200"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_90"
            android:layout_marginTop="@dimen/h_40"
            android:gravity="center"
            android:text="推荐电影"
            android:textColor="#fe7e80"
            android:textScaleX="1.2"
            android:textSize="@dimen/h_26" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/h_20"
            android:layout_marginLeft="@dimen/w_80"
            android:layout_marginRight="@dimen/w_80" />

    </FrameLayout>

    <include
        layout="@layout/layout_info"
        android:layout_width="@dimen/w_920"
        android:layout_height="@dimen/h_530"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/w_90"
        android:layout_marginTop="@dimen/h_108" />
</FrameLayout>
